#!/bin/bash

set -o errexit
set -o pipefail
set -o nounset

bash -c "/opt/mssql/bin/sqlservr & sleep 10"

DB_USER=SA
DB_PASS=incoroutine1!
DB_NAME=master

SQL_SCRIPT=./secom_workhistory.sql

/opt/mssql-tools/bin/sqlcmd -U $DB_USER -P $DB_PASS -d $DB_NAME -S localhost -i $SQL_SCRIPT

echo "Success Create Table"

cron

# docker가 계속 실행되도록 하기 위함
tail -f /dev/null

